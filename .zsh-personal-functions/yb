yb() {
    local yadmBootstrap=$([[ "$(yadm --version)" == "yadm 3"* ]] && echo "yadm bootstrap" || echo "~/.config/yadm/bootstrap")
    sudo -v && \
    yadm pull && \
    yadm submodule update --init --recursive && \
    yadm submodule update --remote code/private/yadm && \
    eval $yadmBootstrap && \
    ~/.config/yadm/bootstrap-sudo && \
    yadm push && \
    sysnd Glass
}
yb "$@"
