# settings for git-delta https://github.com/dandavison/delta
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    side-by-side = true
    line-numbers = false
    file-style = bold yellow
    file-decoration-style = ol yellow
    hunk-header-decoration-style = ol blue
    commit-decoration-style = bold green box ul
